base "endpoints"

group "/api/v1/users" base "users"
    export POST "/" to "CreateUser" in "user.php"
    export GET "/[id]" to "RetrieveUser" in "user.php"
    export PUT "/[id]" to "UpdateUser" in "user.php"
    export DELETE "/[id]" to "DeleteUser" in "user.php"

    export POST "/login" to "LoginUser" in "auth.php"
    export POST "/logout" to "LogoutUser" in "auth.php"

group "/api/v1/projects" base "projects"
    export GET "/" to "RetrieveAllProjects" in "all.php"
    export POST "/" to "CreateProject" in "specific/project.php"

group "/api/v1/projects/[id]" base "projects/specific"
    export PUT "/" to "UpdateProject" in "project.php"
    export GET "/" to "RetrieveProject" in "project.php"

    export GET "/image" to "RetrieveImage" in "image.php"
    export PUT "/image" to "UpdateImage" in "image.php"

    export POST "/pledge" to "PledgeProject" in "pledge.php"

    export GET "/rewards" to "RetrieveRewards" in "rewards.php"
    export PUT "/rewards" to "UpdateRewards" in "rewards.php"
